-
    var colorlist = [
        {value: 'FF0000', name: 'Red'},
        {value: 'FF0F00', name: 'Orangered'},
        {value: '00FF00', name: 'Green'},
        {value: '0000FF', name: 'Blue'},
        {value: '007FFF', name: 'LightBlue'},
        {value: '00FFFF', name: 'Cyan'},
        {value: 'FFFFFF', name: 'White'},
        {value: 'FF9C95', name: 'TrueWhite'}];
    var name = 'RGB LEDs';

mixin ledcard
    .col.s12.m6.l4
        .card
            .card-content.grey-text.text-darken-3
                span.card-title.grey-text= name
                    .divider.ledstatusbg #ledStatus
                    form#ledForm
                        each color in colorlist
                            p
                                input(id="ledRadio".concat(color.name) name="ledRadios" type="radio" value=color.value)
                                label(for="ledRadio".concat(color.name))= color.name.toLowerCase()
                        p.range-field
                            input#ledBrightness(type="range" min="16" max="255" value="255")
                .card-action.right-align.switch
                    label
                        | Off
                        input#ledSwitch(checked="checked" type="checkbox")
                        span.lever
                        | On
