mixin sensorcard(name, title, fields, chart, fab)
    .col.s12.m6.l4
        .card
            if chart
                .card-image
                    div.chart(id=`${name}-chart`)
                    if chart.fab
                        button.btn-floating.halfway-fab.waves-effect.waves-light.blue.modal-trigger(id=`${name}-fab`)
                            i.material-icons= chart.fab.icon
            .card-content.grey-text.text-darken-3
                span.card-title.grey-text= title
                table.striped.grey-text.text-darken-1
                    tbody
                        each field in fields
                            tr
                                td= field.name
                                td.right-align
                                    data.grey-text.text-darken-2(id=field.id)
                                td= field.unit
